<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <HorizontalScrollView
        android:id="@+id/hlsv_hlscrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">
        <LinearLayout
            android:id="@+id/ll_linlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_butt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="天与佳测试1"
                android:drawableRight="@mipmap/xiayibu"/>
            <Button
                android:id="@+id/btn_butt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="天与佳测试2"
                android:visibility="gone"
                android:drawableRight="@mipmap/xiayibu"/>
            <Button
                android:id="@+id/btn_butt3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="天与佳测试3"
                android:visibility="gone"
                android:drawableRight="@mipmap/xiayibu"/>
            <Button
                android:id="@+id/btn_butt4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="天与佳测试4"
                android:visibility="gone"
                android:drawableRight="@mipmap/xiayibu"/>
            <Button
                android:id="@+id/btn_butt5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="天与佳测试5"
                android:visibility="gone"
                android:drawableRight="@mipmap/xiayibu"/>
            <Button
                android:id="@+id/btn_butt6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="天与佳测试5"
                android:visibility="gone"
                android:drawableRight="@mipmap/xiayibu"/>
        </LinearLayout>
    </HorizontalScrollView>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_rclview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</LinearLayout>